<% provide(:title, 'Sign up')%>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 cold-md-offset-3 col-lg-6">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %> 
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.text_field :password %>
      
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.text_field :password_confirmation %>
      
      <%= f.submit "Create Account", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
